<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblDensityClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DensityClass: "
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDensityClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/lblDensityClass"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblDensityDpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="DensityDpi    : "
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDensityClass" />

    <TextView
        android:id="@+id/tvDensityDpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lblDensityDpi"
        app:layout_constraintLeft_toRightOf="@+id/lblDensityDpi"
        app:layout_constraintTop_toTopOf="@+id/lblDensityDpi" />

    <View
        android:id="@+id/sep"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        android:background="@color/design_default_color_error"
        app:layout_constraintTop_toBottomOf="@+id/lblDensityDpi" />

    <TextView
        android:id="@+id/lblLDPI"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ldpi       (~120dpi) --> 0.75x = "
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sep" />

    <EditText
        android:id="@+id/etLDPI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_box_corner"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="6"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lblLDPI"
        app:layout_constraintLeft_toRightOf="@+id/lblLDPI"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblLDPI" />

    <TextView
        android:id="@+id/lblMDPI"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="mdpi     (~160dpi) --> 1x = "
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblLDPI" />

    <EditText
        android:id="@+id/etMDPI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_box_corner"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="6"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lblMDPI"
        app:layout_constraintLeft_toRightOf="@+id/lblMDPI"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblMDPI" />

    <TextView
        android:id="@+id/lblHDPI"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="hdpi       (~240dpi) --> 1.5x ="
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblMDPI" />

    <EditText
        android:id="@+id/etHDPI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_box_corner"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="6"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lblHDPI"
        app:layout_constraintLeft_toRightOf="@+id/lblHDPI"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblHDPI" />

    <TextView
        android:id="@+id/lblXHDPI"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="xhdpi     (~320dpi) --> 2x = "
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblHDPI" />

    <EditText
        android:id="@+id/etXHDPI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_box_corner"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="6"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lblXHDPI"
        app:layout_constraintLeft_toRightOf="@+id/lblXHDPI"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblXHDPI" />

    <TextView
        android:id="@+id/lblXXHDPI"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="xxhdpi   (~480dpi) --> 3x ="
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblXHDPI" />

    <EditText
        android:id="@+id/etXXHDPI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_box_corner"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="6"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lblXXHDPI"
        app:layout_constraintLeft_toRightOf="@+id/lblXXHDPI"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblXXHDPI" />

    <TextView
        android:id="@+id/lblXXXHDPI"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="xxxhdpi (~640dpi) --> 4x ="
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblXXHDPI" />

    <EditText
        android:id="@+id/etXXXHDPI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_box_corner"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="6"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lblXXXHDPI"
        app:layout_constraintLeft_toRightOf="@+id/lblXXXHDPI"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblXXXHDPI" />

</androidx.constraintlayout.widget.ConstraintLayout>